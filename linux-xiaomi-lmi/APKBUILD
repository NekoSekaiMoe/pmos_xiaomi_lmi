# Reference: <https://postmarketos.org/vendorkernel>
# Kernel config based on: arch/arm64/configs/(CHANGEME!)

pkgname=linux-xiaomi-lmi
pkgver=4.14.269
pkgrel=0
pkgdesc="Xiaomi Redmi K30 Pro kernel fork"
arch="aarch64"
_carch="arm64"
_flavor="xiaomi-lmi"
url="https://kernel.org"
license="GPL-2.0-only"
options="!strip !check !tracedeps pmb:cross-native"
makedepends="
	bash
	bc
	bison
	devicepkg-dev
	findutils
	flex
	openssl-dev
	perl
	python3
	clang
	xz
	linux-headers
"

# Source
_repository="android_kernel_xiaomi_sm8250"
_commit="ac082818bbe24eebb69f64f0a61be28faaa5674f"
_config="config-$_flavor.$arch"
source="
	$pkgname-$_commit.tar.gz::https://github.com/crdroidandroid/$_repository/archive/$_commit.tar.gz
	$_config
	fix-py3.patch
"
builddir="$srcdir/$_repository-$_commit"
_outdir="out"

prepare() {
	default_prepare
	REPLACE_GCCH=0
	. downstreamkernel_prepare
}

build() {
	unset LDFLAGS
	make O="$_outdir" ARCH="$_carch" CC="clang" \
		KBUILD_BUILD_VERSION="$((pkgrel + 1 ))-postmarketOS"
}

package() {
	downstreamkernel_package "$builddir" "$pkgdir" "$_carch" \
		"$_flavor" "$_outdir"
	cp -v $_outdir/arch/arm64/boot/dtbo.img "$pkgdir"/boot
	mkdir -pv "$pkgdir"/boot/dtbs
	mkdir -pv "$pkgdir"/boot/dtbs/qcom
	cp -rv $_outdir/arch/arm64/boot/dts/vendor/qcom/*.dtb "$pkgdir"/boot/dtbs/qcom/
	make dtbs_install modules_install CC=clang O="$_outdir" ARCH="$_carch" \
		INSTALL_DTBS_PATH="$pkgdir"/boot/dtbs INSTALL_MOD_PATH="$pkgdir"
}

